@model SteelSlabManagement.Models.Order

<h2>Create Order</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Grade"></label>
        <select asp-for="Grade" class="form-control" />
           <option value="A">Grade A</option>
           <option value="B">Grade B</option>
           <option value="C">Grade C</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Length"></label>
        <input asp-for="Length" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Width"></label>
        <input asp-for="Width" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
