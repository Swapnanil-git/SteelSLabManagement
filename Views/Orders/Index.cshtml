@model IEnumerable<SteelSlabManagement.Models.Order>

<h2>Orders</h2>
<a asp-action="Create" class="btn btn-primary">Create New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Grade</th>
            <th>Length</th>
            <th>Width</th>
            <th>Quantity</th>
            <th>Weight</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.Grade</td>
                <td>@item.Length</td>
                <td>@item.Width</td>
                <td>@item.Quantity</td>
                <td>@item.Weight</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
