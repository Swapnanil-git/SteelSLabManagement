@model SteelSlabManagement.Models.Production

<h2>Delete Production</h2>

<p>Are you sure you want to delete this production record?</p>

<div class="form-group">
    <label>Production ID:</label>
    <p>@Model.ProductionId</p>
</div>
<div class="form-group">
    <label>Order ID:</label>
    <p>@Model.OrderId</p>
</div>
<div class="form-group">
    <label>Stage:</label>
    <p>@Model.Stage</p>
</div>
<div class="form-group">
    <label>Timestamp:</label>
    <p>@Model.Timestamp</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
