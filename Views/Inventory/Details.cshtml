@model SteelSlabManagement.Models.Inventory

<h2>Inventory Details</h2>

<div class="form-group">
    <label>Batch ID:</label>
    <p>@Model.BatchId</p>
</div>
<div class="form-group">
    <label>Grade:</label>
    <p>@Model.Grade</p>
</div>
<div class="form-group">
    <label>Weight:</label>
    <p>@Model.Weight</p>
</div>
<div class="form-group">
    <label>Status:</label>
    <p>@Model.Status</p>
</div>
<div class="form-group">
    <label>Created At:</label>
    <p>@Model.CreatedAt</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.BatchId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
