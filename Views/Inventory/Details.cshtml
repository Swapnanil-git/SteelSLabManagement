@model IEnumerable<SteelSlabManagement.Models.Inventory>

<h2>Inventory Details</h2>
@foreach (var item in Model)
{
<div class="inventory-item">
<div class="form-group">
    <label>Batch ID:</label>
    <p>@item.BatchId</p>
</div>
<div class="form-group">
    <label>Grade:</label>
    <p>@item.Grade</p>
</div>
<div class="form-group">
    <label>Weight:</label>
    <p>@item.Weight</p>
</div>
<div class="form-group">
    <label>Status:</label>
    <p>@item.Status</p>
</div>
<div class="form-group">
    <label>Created At:</label>
    <p>@item.CreatedAt</p>
</div>
   <a asp-action="Edit" asp-route-id="@item.BatchId" class="btn btn-primary">Edit</a>
</div>
}

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
