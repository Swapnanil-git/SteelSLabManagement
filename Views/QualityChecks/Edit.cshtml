@model SteelSlabManagement.Models.QualityCheck

<h2>Edit Quality Check</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="CheckId" />

    <div class="form-group">
        <label asp-for="BatchId"></label>
        <input asp-for="BatchId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Result"></label>
        <input asp-for="Result" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
