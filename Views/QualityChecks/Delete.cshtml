@model SteelSlabManagement.Models.QualityCheck

<h2>Delete Quality Check</h2>

<p>Are you sure you want to delete this quality check record?</p>

<div class="form-group">
    <label>Check ID:</label>
    <p>@Model.CheckId</p>
</div>
<div class="form-group">
    <label>Batch ID:</label>
    <p>@Model.BatchId</p>
</div>
<div class="form-group">
    <label>Result:</label>
    <p>@Model.Result</p>
</div>
<div class="form-group">
    <label>Comments:</label>
    <p>@Model.Comments</p>
</div>
<div class="form-group">
    <label>Checked At:</label>
    <p>@Model.CheckedAt</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CheckId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
